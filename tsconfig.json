{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./renderer/src/*"]
    },
    "baseUrl": "."
  },
  "include": ["renderer/src/**/*.ts", "renderer/src/**/*.vue", "renderer/src/env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
